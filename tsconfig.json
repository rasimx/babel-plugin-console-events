{
  "compilerOptions": {
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "declaration": true,
    "outDir": "lib",
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src"]
}